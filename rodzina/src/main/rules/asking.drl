package rules

import com.sample.*;

rule "Ask metal"
  when
    q : Question(isId(0))
  then
    Comm.askQuestion(q);
end

rule "Ask instruments"
  when
    q : Question(isId(1))
  then
    Comm.askQuestion(q);
end

rule "Jest metal"
  when
    Fact(name("metal"), value(true))
  then
    Comm.showMessage("Metal kurwa!!");
end

rule "Nie ma metalu"
  when
    Fact(name("metal"), value(false))
  then
    System.out.println("Idź pan w chuj");
end

rule "Gitarra" //specjalnie rr
  when
    Fact(name("gitara"), value(true))
    q : Question(isId(0))
  then
